    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container my-5" style="height: 350px;">
            <div class="row justify-content-md-center mt-4">
                <div class="col-md-10">
                    <div class="input-group m-2 shadow-sm">
                        <div class="input-group-prepend ">
                            <div class="input-group-text"><i class="fas fa-user"></i></div>
                        </div>
                        <input name="UserName" type="text" class="form-control" id="inp1" autocomplete="off">
                    </div>
                    <div class="input-group m-2 shadow-sm">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-key"></i></div>
                        </div>
                        <input name="Password" type="password" class="form-control" autocomplete="off" id="inp2">
