<script>
    function ShowPassword() {
        var x = document.getElementById("inp2");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
    superplaceholder({
        el: inp1,
        sentences: ['Please Enter Username...'],
        options: {
            loop: true,
            letterDelay: 50
        }
    })

    superplaceholder({
        el: inp2,
        sentences: ['Please Enter Password...'],
        options: {
            loop: true,
            letterDelay: 50
        }
    })

</script>