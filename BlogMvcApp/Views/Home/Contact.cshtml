<div class="container my-5">
    <section class="container">
        <!--Contact heading-->
        <h4 class="m-2">Contact</h4>
        <!--Contact description-->
        <p class="m-2">
            I am happy to answer any questions you have or provide you with an estimate.
            Just send me a message in the form below. Please allow a couple days for me to respond .
        </p>
        <hr />
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card-body p-3">
                    <form>
                        <div class="form-group">
                            <label>Your name</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="Your Name" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Your email</label>
                            <div class="input-group mb-2">
                                <input type="email" class="form-control" id="inlineFormInputGroupUsername" placeholder="Your Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Message</label>
                            <div class="input-group mb-2">
                                <div class="input-group-addon bg-light"><i class="fa fa-pencil text-primary"></i></div>
                                <textarea class="form-control" placeholder="Write Something..."></textarea>
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-success btn-block rounded-0 py-2">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

