@using BlogMvcApp.Entity
@model Blog
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2 id="blogDate"><small><i class="fas fa-clock"></i> Posted On 9.10.2018</small></h2>
            <hr />
            <div class="shadow-sm my-3" style="height:500px;">
                <div class="card-body" id="BlogDetails">
                    <div class="media">
                        <div id="answer">
                            <p id="answerNumber">0</p>
                            <p id="answerText">Answer</p>
                        </div>
                        <div class="media-body p-2">
                            <h5 class="card-title">@Model.Title</h5>
                        </div>
                    </div>
                    @*<img class="img-thumbnail m-3" src="/Upload/@Model.Image" />*@
                </div>
            </div>
            <div class="bd-example bd-example-tabs">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active show" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Code <i class="fas fa-code"></i></a>
                        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Comments <i class="fas fa-comment-dots"></i></a>
                    </div>
                </nav>
                <div class="tab-content my-3" id="nav-tabContent">
                    <div class="tab-pane fade active show" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <figure class="highlight embed-responsive-item" style="background-color: aliceblue;">
                            <pre>
                                <code class="language-html" data-lang="html">
                                            @Html.Raw(Model.Description)
                                </code>
                            </pre>
                        </figure>
                    </div>
                    <div class="tab-pane fade rounded " id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                        <div class="container">
                            <div class="row">
                                <div class="comments col-md-9 my-3" id="comments">
                                    <!-- comment -->
                                    <div class="comment mb-2 row">
                                        <div class="comment-avatar col-md-1 col-sm-2 text-center pr-1">
                                            <a href=""><img class="mx-auto rounded-circle img-fluid" src="http://demos.themes.guide/bodeo/assets/images/users/m103.jpg" alt="avatar"></a>
                                        </div>
                                        <div class="comment-content col-md-11 col-sm-10">
                                            <h6 class="small comment-meta "><a href="#" class="font-weight-bold">admin</a> Today, 2:38</h6>
                                            <div class="comment-body">
                                                <p>
                                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod <a href>http://wwwwww.com</a> tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.
                                                    <br>
                                                    <a href="" class="text-right small"><i class="fas fa-reply"></i> Reply</a>
                                                </p>
                                            </div>
                                        </div>
                                        <!-- reply is indented -->
                                        <div class="comment-reply col-md-11 offset-md-1 col-sm-10 offset-sm-2">
                                            <div class="row">
                                                <div class="comment-avatar col-md-1 col-sm-2 text-center pr-1">
                                                    <a href=""><img class="mx-auto rounded-circle img-fluid" src="http://demos.themes.guide/bodeo/assets/images/users/m101.jpg" alt="avatar"></a>
                                                </div>
                                                <div class="comment-content col-md-11 col-sm-10 col-12">
                                                    <h6 class="small comment-meta"><a href="#" class="font-weight-bold">phildownney</a> Today, 12:31</h6>
                                                    <div class="comment-body">
                                                        <p>
                                                            Really?? Consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitat.
                                                            <br>
                                                            <a href="" class="text-right small"><i class="fas fa-reply"></i> Reply</a>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /reply is indented -->
                                    </div>
                                    <!-- comment -->
                                    <div class="comment mb-2 row">
                                        <div class="comment-avatar col-md-1 col-sm-2 text-center pr-1">
                                            <a href=""><img class="mx-auto rounded-circle img-fluid" src="http://demos.themes.guide/bodeo/assets/images/users/w102.jpg" alt="avatar"></a>
                                        </div>
                                        <div class="comment-content col-md-11 col-sm-10">
                                            <h6 class="small comment-meta"><a href="#" class="font-weight-bold">maslarino</a> Yesterday, 5:03 PM</h6>
                                            <div class="comment-body">
                                                <p>
                                                    Sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.
                                                    <br>
                                                    <a href="" class="text-right small"><i class="fas fa-reply"></i> Reply</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Write Your Comment...">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-success"><i class="fas fa-pencil-alt"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

